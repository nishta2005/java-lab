package myPack;
class Balance {
 String Name;
 double Balance;

Balance(String S, double f){
 Name = S;
 Balance = f;
}

void displayshow(){
if (Balance<0){
System.out.println("no balance");
}

if(Balance>0){
 System.out.println("name is"+" "+Name);
 System.out.println("balance is"+" "+Balance);
}
}
}

class AccountBalance1{
 public static void main(String args[]){
  Balance Current[]=new Balance[3];
  Current[0]=new Balance("Nishta",1000.0);
  Current[1]=new Balance("Srikanth" , 2000.0);
  Current[2]=new Balance("Mansi", 3000.0);
  for(int i=0;i<3;i++)
  {
  Current[i].displayshow();
  }

 }

}
